rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);
      
      // Users can update their own data
      allow update: if isOwner(userId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'preferences']);
      
      // Only admins can create/delete users
      allow create: if isAdmin();
      allow delete: if isAdmin();
      
      // Admins can read any user
      allow read: if isAdmin();
    }
    
    // Predictions collection
    match /predictions/{predictionId} {
      // Users can read their own predictions
      allow read: if isOwner(resource.data.user_id);
      
      // Users can create predictions (must set user_id to their own uid)
      allow create: if request.auth != null && 
                       request.resource.data.user_id == request.auth.uid;
      
      // Users can update their own predictions
      allow update: if isOwner(resource.data.user_id);
      
      // Only admins can delete predictions
      allow delete: if isAdmin();
      
      // Admins can read all predictions
      allow read: if isAdmin();
    }
    
    // User garden subcollection
    match /my_garden/{userId}/plants/{plantId} {
      // Users can read/write their own garden
      allow read, write: if isOwner(userId);
      
      // Admins can read all gardens
      allow read: if isAdmin();
    }
    
    // Plants collection (public data)
    match /plants/{plantId} {
      // Anyone can read plants
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Diseases collection (public data)
    match /diseases/{diseaseId} {
      // Anyone can read diseases
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      // Users can create feedback
      allow create: if request.auth != null && 
                       request.resource.data.user_id == request.auth.uid;
      
      // Users can read their own feedback
      allow read: if isOwner(resource.data.user_id);
      
      // Only admins can read all feedback
      allow read: if isAdmin();
      
      // Only admins can update/delete feedback
      allow update, delete: if isAdmin();
    }
    
    // Model versions collection
    match /model_versions/{versionId} {
      // Anyone can read model versions
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Security events collection
    match /security_events/{eventId} {
      // Only admins can read/write security events
      allow read, write: if isAdmin();
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      // Users can read their own schedules
      allow read: if isOwner(resource.data.userId);
      
      // Users can create schedules (must set userId to their own uid)
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own schedules
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own schedules
      allow delete: if isOwner(resource.data.userId);
      
      // Admins can read all schedules
      allow read: if isAdmin();
    }
    
    // Resources collection
    match /resources/{resourceId} {
      // Users can read their own resources
      allow read: if isOwner(resource.data.userId);
      
      // Users can create resources (must set userId to their own uid)
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own resources
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own resources
      allow delete: if isOwner(resource.data.userId);
      
      // Admins can read all resources
      allow read: if isAdmin();
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

